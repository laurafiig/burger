<div class="container">
	<div class="row">
		<div class="col-md-12">
			<br>
			<h1>Have a Burger!!</h1>
			<img src="assets/img/burger.png">
			<hr>
		</div>
	</div>
	<div class="row">
		<div class="col-md-4" id="lft">
			<h2>Burgers you haven't eaten!</h2>
			<ul>
				{{#each burgers}}
					{{#unless this.devoured}}
						<li>
							{{this.id }}.  {{this.burger_name}}
							<form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
								<input type="hidden" name="devoured" value="true">
								<button class="btn btn-info" type="submit">DEVOUR!</button>
							</form>
							<br>
						</li>
					{{/unless}}
				{{/each}}
			</ul>
		</div>
		<div class="col-md-4" id="cntr">
			<h2>Add a Burger</h2>
			<form class="create-update-form" action="burgers/create" method="POST">
				<div class="form-group">
					<label for="bu">Burger Name:</label>
					<input type="text" id="bu" name="burger_name">
				</div>
				<button class="btn btn-info" type="submit">Add Burger</button>
			</form>
		</div>
		<div class="col-md-4" id="rght">
			<h2>Burgers you have eaten!</h2>
			<ul>
				{{#each burgers}}
					{{#if this.devoured}}
						<li>
							{{this.id }}.  {{this.burger_name}}
						</li>
					{{/if}}
				{{/each}}
			</ul>    
		</div>
	</div>
</div>





