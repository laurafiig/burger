<div class="container">
	<div class="row">
		<div class="col-md-4">
			<img src="../public/assets/img/burger.jpg">
			<h1>Have a Burger!!</h1>
		</div>
	</div>
	<div class="row">
		<div class="col-md-4">
			<ul>
				{{#each burgers}}
					{{#unless this.devoured}}
						<li>
							{{this.id }}{{this.burger_name}}
							<form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
								<input type="hidden" name="devoured" value="true">
								<button type="submit">DEVOUR!</button>
							</form>
						</li>
					{{/unless}}
				{{/each}}
			</ul>
		</div>
		<div class="col-md-4">
			<h2>Add a Burger</h2>
			<form class="create-update-form" action="burgers/create" method="POST">
				<div class="form-group">
					<label for="bu">Burger Name:</label>
					<input type="text" id="bu" name="name">
				</div>
				<button type="submit">Add Burger</button>
			</form>
		</div>
		<div class="col-md-4">
			<h2>Burgers you have eaten!</h2>
			<ul>
				{{#each burgers}}
					{{#if this.devoured}}
						<li>
							{{this.name}}
						</li>
					{{/if}}
				{{/each}}
			</ul>    
		</div>
	</div>
</div>





